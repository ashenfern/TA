@{
    ViewBag.Title = "Orders Page";
}
<div ng-controller="OrdersController">
    <div class="divList">
        <p><b><i>Orders List</i></b></p>
        <table class="table table-hover">
            <tr>
                <td><b>ID</b></td>
                <td><b>CustomerName</b></td>
                <td><b>CustomerAddress</b></td>
                <td><b>ItemName</b></td>
                <td><b>Quantity</b></td>
                <td><b>Date</b></td>
            </tr>
            <tr ng-repeat="order in orders">
                <td>
                    {{order.Id}}
                </td>
                <td>
                    {{order.CustomerName}}
                </td>
                <td>
                    {{order.CustomerAddress}}
                </td>
                <td>
                    {{order.ItemName}}
                </td>
                <td>
                    {{order.Quantity}}
                </td>
                <td>
                    {{order.Date}}
                </td>
                @*<td>
                    <span ng-click="editOrder(order)" class="btn btn-primary">Edit</span>
                    <span ng-click="deleteOrder(order)" class="btn btn-danger">Delete</span>
                </td>*@
            </tr>
        </table>
    </div>
    <span ng-click="AddOrderDiv()" class="btn btn-default">
        Add Order
    </span>
    <div ng-show="divOrder">
        <p class="divHead"></p>
        <table class="table">
            <tr>
                <td><b><i>{{Action}} Book</i></b></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
            <tr>
                <td><b>Id</b></td>
                <td>
                    <input type="text" disabled="disabled" ng-model="orderId" />
                </td>
                <td><b>Description</b></td>
                <td>
                    <input type="text" ng-model="Description" />
                </td>
            </tr>
            <tr>
                <td><b>CustomerName</b></td>
                <td>
                    <input type="text" ng-model="CustomerName" />
                </td>
                <td><b>CustomerAddress</b></td>
                <td>
                    <input type="text" ng-model="CustomerAddress" />
                </td>
            </tr>
            <tr>
                <td><b>ItemName</b></td>
                <td>
                    <input type="text" ng-model="ItemName" />
                </td>
                <td><b>Quantity</b></td>
                <td>
                    <input type="text" ng-model="Quantity" />
                </td>
            </tr>
            <tr>
                <td><b>Date</b></td>
                <td>
                    <input type="text" ng-model="Date" />
                </td>
                <td></td>
                <td>
                    <input type="button" class="btn btn-default" value="Save" ng-click="AddUpdateOrder()" />
                    <input type="button" class="btn btn-danger" value="Cancel" ng-click="Cancel()" />
                </td>
            </tr>
        </table>
    </div>
</div>